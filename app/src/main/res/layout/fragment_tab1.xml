                android:text="STOP ALL"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:elevation="6dp"
                android:padding="6dp"
